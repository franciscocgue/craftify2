    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "rc-tree": "^5.8.7",
    "react": "^18.3.1",
    "react-arborist": "^3.4.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-qr-code": "^2.0.15",
    "react-spinners": "^0.14.1",
    "react-tiny-popover": "^8.0.4",
